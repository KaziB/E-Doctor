<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simanta.mydoctor.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/hospital_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"></Spinner>
        <Spinner
            android:id="@+id/department_spinner"
            android:layout_below="@+id/hospital_spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"></Spinner>
        <Button
            android:id="@+id/serach_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Search"
            android:layout_below="@+id/department_spinner"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
